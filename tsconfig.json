{
    "compilerOptions": {
      "module": "commonjs", 
      "target": "es2016",
      "rootDir": "./src",
      "outDir": "./dist",
      "declaration": false,
      "removeComments": true,
      "noEmitOnError": true,
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true
    },
    "include": [
      "src/**/*"
    ]
  }